// Prisma schema for FlowForge MVP

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// Beat model - Stores instrumental beat metadata
model Beat {
  id              String   @id @default(uuid())
  title           String
  bpm             Int
  storageUrl      String   @map("storage_url")
  isPremium       Boolean  @default(false) @map("is_premium")
  genre           String?
  duration        Int?     // Duration in seconds
  artistName      String?  @map("artist_name")
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")

  // Relations
  sessions        FreestyleSession[]

  @@map("beats")
}

// Word model - Word library for prompts
model Word {
  id              String   @id @default(uuid())
  wordText        String   @unique @map("word_text")
  syllableCount   Int      @map("syllable_count")
  difficultyLevel Int      @map("difficulty_level") // 1 = Easy, 2 = Medium, 3 = Hard
  category        String?  // Optional: noun, verb, adjective, etc.
  createdAt       DateTime @default(now()) @map("created_at")

  @@index([difficultyLevel])
  @@index([syllableCount])
  @@map("words")
}

// User model - NextAuth.js user accounts
model User {
  id            String    @id @default(uuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime? @map("email_verified")
  image         String?
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")

  // Relations
  accounts      Account[]
  sessions      Session[]
  freestyleSessions FreestyleSession[]

  @@map("users")
}

// Account model - NextAuth.js OAuth accounts
model Account {
  id                String  @id @default(uuid())
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

// Session model - NextAuth.js sessions
model Session {
  id           String   @id @default(uuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

// VerificationToken model - NextAuth.js email verification
model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// FreestyleSession model - Saved practice sessions
model FreestyleSession {
  id              String   @id @default(uuid())
  userId          String   @map("user_id") // Now required with auth
  beatId          String   @map("beat_id")
  title           String
  storageUrl      String?  @map("storage_url")
  durationSeconds Int      @map("duration_seconds")
  frequency       Int      @default(8) // 4, 8, or 16 bars
  difficulty      Int      @default(2) // 1 = Easy, 2 = Medium, 3 = Hard
  createdAt       DateTime @default(now()) @map("created_at")

  // Relations
  beat            Beat     @relation(fields: [beatId], references: [id], onDelete: Cascade)
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([beatId])
  @@index([createdAt])
  @@map("freestyle_sessions")
}

